<assembly>
  <id>bundle</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/nexus</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>*:jar:*</include>
      </includes>
      <excludes>
        <exclude>org.sonatype.nexus:nexus-oss-webapp:*</exclude>
      </excludes>
      <outputDirectory>nexus-oss-webapp-${nexusVersion}/runtime/apps/nexus/lib</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>