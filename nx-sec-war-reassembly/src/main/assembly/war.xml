<assembly>
  <id>war</id>
  <formats>
    <format>war</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/nexus</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.build.directory}/js/nx-sec-remote-user-auth-${project.version}-nxsec.js</source>
      <outputDirectory>js/remoteUserAuth</outputDirectory>
      <destName>nx-sec-remote-user-auth-all.js</destName>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>*:jar:*</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>WEB-INF/lib</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>