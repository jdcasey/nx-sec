<assembly>
  <id>bundle</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/nexus</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.build.directory}/conf/nx-sec-remote-user-auth-${project.version}-security.conf</source>
      <outputDirectory>sonatype-work/nexus/conf</outputDirectory>
      <destName>security-configuration.xml</destName>
    </file>
    <file>
      <source>${project.build.directory}/conf/nx-sec-remote-user-auth-${project.version}-nxsec.conf</source>
      <outputDirectory>sonatype-work/nexus/conf</outputDirectory>
      <destName>nx-sec.properties</destName>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>*:jar:*</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>nexus-oss-webapp-${nexusVersion}/runtime/apps/nexus/lib</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>